<div class="mx-auto max-w-sm bg-white p-8 rounded-xl shadow text-blue-normal">
  <.header class="text-center text-blue-normal">
    Log in to account
  </.header>

  <.simple_form :let={f} for={@conn.params["user"]} as={:user} action={~p"/users/log_in"}>
    <.error :if={@error_message}>{@error_message}</.error>

    <.input field={f[:email]} type="email" label="Email" required />
    <.input field={f[:password]} type="password" label="Password" required />

    <:actions :let={f}>
      <.input field={f[:remember_me]} type="checkbox" label="Keep me logged in" />
      <.link href={~p"/users/reset_password"} class="text-sm font-semibold text-blue-normal">
        Forgot your password?
      </.link>
    </:actions>
    <:actions>
      <.button
        phx-disable-with="Logging in..."
        class="btn-primary bg-blue-normal border-blue-normal w-full"
      >
        Log in <span aria-hidden="true">â†’</span>
      </.button>
    </:actions>
  </.simple_form>
</div>
