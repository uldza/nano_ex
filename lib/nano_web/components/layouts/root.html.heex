<!DOCTYPE html>
<html lang="en" class="scroll-smooth focus:scroll-auto" data-theme={theme(@conn)}>
  <.head conn={@conn} />

  <body class="antialiased bg-white min-h-screen">
    <!-- Header Section -->
    <header class="container mx-auto py-4 px-4 flex justify-between items-center">
      <div class="flex items-center">
        <div class="text-3xl font-bold text-blue-normal">
          <img src="/images/pikabu-logo.png" alt="Pikabu logo" class="h-16" />
        </div>
      </div>
      <ul class="relative z-10 flex items-center gap-4 px-4 sm:px-6 lg:px-8 justify-end">
        <%= if @current_user do %>
          <li class="text-[0.8125rem] leading-6 text-blue-dark">
            {@current_user.email}
          </li>
          <li>
            <.link
              href={~p"/users/settings"}
              class="nav-btn bg-blue-light border-blue-normal text-blue-normal"
            >
              Settings
            </.link>
          </li>
          <li>
            <.link
              href={~p"/users/log_out"}
              method="delete"
              class="nav-btn bg-blue-light border-blue-normal text-blue-normal"
            >
              Log out
            </.link>
          </li>
        <% else %>
          <li>
            <.link
              href={~p"/users/register"}
              class="nav-btn bg-blue-light border-blue-normal text-blue-normal"
            >
              Register
            </.link>
          </li>
          <li>
            <.link
              href={~p"/users/log_in"}
              class="nav-btn bg-blue-light border-blue-normal text-blue-normal"
            >
              Log in
            </.link>
          </li>
        <% end %>
      </ul>
    </header>

    {@inner_content}
    
<!-- Footer -->
    <footer>
      <div class="blue-normal [border-top-left-radius:4rem] py-8 px-4">
        <div class="container mx-auto">
          <div class="flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-white">Â© 2025 Pikabu Video. All rights reserved.</p>
            <div class="flex gap-8">
              <a href="/privacy" class="text-white underline hover:text-blue-light transition-colors">Privacy Policy</a>
              <a href="/terms" class="text-white underline hover:text-blue-light transition-colors">Terms of Service</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
