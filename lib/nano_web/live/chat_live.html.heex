<div class="h-full flex flex-col gap-4">
  <!-- Chat Messages Box -->
  <div class="flex-1 rounded-2xl border-2 border-[var(--blue-dark-active)] bg-white p-4">
    <div
      class="h-full overflow-y-auto overflow-x-hidden"
      id="chat-messages"
      phx-update="stream"
      phx-hook="ScrollToBottom"
    >
      <%= for msg <- Enum.reverse(@messages) do %>
        <div class="mb-4" id={"message-#{msg.id}"}>
          <div class="flex items-start">
            <div class="flex-1">
              <div class="text-sm font-semibold text-purple-600 mb-1">
                {msg.user.username}
              </div>
              <div class="bg-white rounded-2xl p-4 shadow-lg border border-purple-100">
                <p class="text-gray-700 text-lg">{msg.content}</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Emoji Box -->
  <div class="rounded-2xl border-2 border-[var(--red-dark-active)] bg-white p-4">
    <div class="flex justify-between items-center text-4xl">
      <button class="hover:scale-110 transition-transform">😊</button>
      <button class="hover:scale-110 transition-transform">👍</button>
      <button class="hover:scale-110 transition-transform">❤️</button>
      <button class="hover:scale-110 transition-transform">🎉</button>
      <button class="hover:scale-110 transition-transform">🔥</button>
    </div>
  </div>

  <!-- Chat Input Box -->
  <div class="rounded-2xl border-2 border-[var(--green-dark-active)] bg-white p-4">
    <form phx-submit="send_message" class="flex gap-2">
      <input
        type="text"
        name="message"
        value={@message}
        placeholder="Type a message..."
        class="flex-1 rounded-2xl border-2 border-purple-200 px-4 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
      />
      <button
        type="submit"
        class="bg-purple-500 text-white px-6 py-3 rounded-2xl hover:bg-purple-600 focus:outline-none focus:ring-2 focus:ring-purple-500 transform hover:scale-105 transition-transform duration-200 flex items-center gap-2"
      >
        <span>Send</span>
        <span>✉️</span>
      </button>
    </form>
  </div>
</div>
